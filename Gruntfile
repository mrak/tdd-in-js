module.exports = function(grunt) {
  grunt.loadNpmTasks('grunt-mocha-cli');

  grunt.initConfig({
    pkg: grunt.file.readJSON('package.json'),
    mochacli: {
      options: {
        timeout: 5000,
        ignoreLeaks: false,
        ui: 'bdd',
        reporter: 'dot'
      },
      all: 'spec/**/*.js'
    }
  });
  grunt.registerTask('default', ['test']);
  grunt.registerTask('test', ['mochacli']);
};
